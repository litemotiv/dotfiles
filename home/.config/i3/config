# This configuration file was written for the NEO layout. If you are using a
# different layout, you should change it.

new_window none

# ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# temporary path during development
ipc-socket ~/.config/i3/ipc.sock

# Open empty container
bindsym Mod1+Shift+Return open

# Start terminal (Mod1+Enter)
bindsym Mod1+Return exec /usr/bin/urxvt

bindsym Mod1+h split h
bindsym Mod1+v split v

# Fullscreen (Mod1+f)
bindsym Mod1+f fullscreen

# Stacking (Mod1+s)
bindsym Mod1+s layout stacking

# Tabbed (Mod1+w)
bindsym Mod1+w layout tabbed

# Default (Mod1+l)
bindsym Mod1+l layout default

# toggle tiling / floating
bindsym Mod1+Shift+space mode toggle

bindsym Mod1+u level up
bindsym Mod1+d level down

# Kill current client (Mod1+c)
bindsym Mod1+c kill

# Restore saved JSON layout
bindsym Mod1+y restore /home/ollie/.config/i3/layout.json

# Restart i3
bindsym Mod1+Shift+c restart
# Reload i3
bindsym Mod1+Shift+j reload
# Exit i3
bindsym Mod1+Shift+l exit

# Focus (Mod1+n/r/t/d)
bindsym Mod1+n prev h
bindsym Mod1+r next v
bindsym Mod1+t prev v
bindsym Mod1+d next h

# alternatively, you can use the cursor keys:
#bindsym Mod1+Left prev h
#bindsym Mod1+Right next h
#bindsym Mod1+Down next v
#bindsym Mod1+Up prev v

# Move
bindsym Mod1+Shift+n move before h
bindsym Mod1+Shift+r move before v
bindsym Mod1+Shift+t move after v
bindsym Mod1+Shift+d move after h

# alternatively, you can use the cursor keys:
bindsym Mod1+Shift+Left move before h
bindsym Mod1+Shift+Right move after h
bindsym Mod1+Shift+Down move before v
bindsym Mod1+Shift+Up move after v

# Workspaces (Mod1+1/2/â€¦)
bindsym Mod1+1 workspace 1
bindsym Mod1+2 workspace 2
bindsym Mod1+3 workspace 3
bindsym Mod1+4 workspace 4
bindsym Mod1+5 workspace 5

# Move to Workspaces
bindsym Mod1+Shift+1 move workspace 1
bindsym Mod1+Shift+2 move workspace 2
bindsym Mod1+Shift+3 move workspace 3
bindsym Mod1+Shift+4 move workspace 4
bindsym Mod1+Shift+5 move workspace 5

bind 122 exec /usr/bin/amixer set "Front Speaker" 5-
bind 123 exec /usr/bin/amixer set "Front Speaker" 5+
bind 232 exec /usr/local/bin/brightness down
bind 233 exec /usr/local/bin/brightness up
bindsym Mod1+p exec /usr/bin/dmenu_run -nb black -nf grey -fn '-*-terminus-*-r-normal-*-12-*-*-*-*-60-*-*'

# assign clients to workspaces
assign urxvt 2

# start applications
exec sh /home/ollie/.fehbg
exec /usr/bin/killall conky
#exec /usr/bin/xcalib /home/ollie/source/hp.icc
exec /usr/bin/xsetroot -cursor_name left_ptr
exec /usr/bin/i3bar -m -s ~/.config/i3/ipc.sock -c /usr/bin/conky --color-inactive-ws-bg 333333 --color-active-ws-bg 666633 --color-bar-fg dddddd -f "-*-terminus-*-r-normal-*-12-*-*-*-*-60-*-*" > /dev/null 2>&1  
exec /usr/bin/urxvtc

