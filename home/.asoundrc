defaults.pcm.card 0
defaults.pcm.device 0
defaults.pcm.type asym
defaults.pcm.rate_converter "samplerate_best"
defaults.ctl.card 0

pcm.rotel {
   type plug
   slave {
       pcm {
           type bluetooth
           device 00:15:83:54:6A:71
           profile "auto"
       }
   }
   hint {
       show on
       description "Rotel RA-11"
   }
}

ctl.rotel {
  type bluetooth
}
